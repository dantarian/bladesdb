<%= form_with model: [@user, @roles], as: :post, url: user_roles_path, action: :update do |f| %>
    <%= f.error_messages :header_message => I18n.t("user.roles.dialog_header"), :message => I18n.t("user.roles.dialog_main") %>
	
	<ul class="form">
		<%= render :partial => "role", :collection => (Role.all), :locals => { :user => @user, :f => f } %>
	</ul>
	
<% end %>
