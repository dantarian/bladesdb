<%= form_for([:character, @character_point_adjustment], :remote => true) do |f| %>
    <%= f.error_messages :header_message => "Failed to save Character Point adjustment request.", :message => "The following problems prevented your request from being saved:" %>

	<ul class="form">
	    <li>
	        <p><em>Note: This form should only be used if your character has the wrong number<br>of Character Points. It should not be used for spending Monster Points.</em></p>
	    </li>
		<li>
			<%= f.label :declared_on %><br />
			<%= f.datepicker :declared_on, :dateFormat => "D d M yy", :changeMonth => true, :changeYear => true, :maxDate => "#{Date.today}", :minDate => "#{character_point_adjustment_earliest_allowed_date(@character)}", :readonly => true %>
		</li>
		<li>
			<%= f.label :points, "Number of points to add or remove" %><br />
			<%= f.text_field :points %><br/>
			<p><em>Enter a positive number to add points or a negative number to remove points.</em></p>
		</li>
		<li>
			<%= f.label :reason %><br />
			<%= f.text_field :reason %>
		</li>
	</ul>
		
<% end %>
