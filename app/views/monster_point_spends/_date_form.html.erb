<%= form_with model: [@character, @monster_point_spend] do |f| %>
    <%= f.error_messages :header_message => "Failed to save date of monster point spend.", :message => "The following problems prevented your data from being saved:" %>

	<ul class="form">
		<%= hidden_field_tag :commit, "date" %>
		<li>
			<%= f.label :spent_on %>
			<%= f.text_field :spent_on, 
							 class: "datepicker", 
							 data: {maxDate: "#{Date.today}", minDate: "#{monster_point_spend_earliest_allowed_date(@character, @monster_point_spend)}"}, 
							 readonly: true, 
							 value: @monster_point_spend.spent_on.to_s, 
							 id: :monster_point_spend_spent_on %><br />
			<em>This date should not coincide with a game, and should be after<br/>your last monster points spend or character points adjustment.</em>
		</li>
	</ul>
<% end %>
