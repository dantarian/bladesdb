:root {
    --primary-rgb: 173, 6, 6;
    --primary-dark-rgb: 104, 4, 4;
    --background-rgb: 255, 249, 215;
    --standout-rgb: 255, 255, 255;

    --primary-color: rgb(var(--primary-rgb));
    --primary-dark-color: rgb(var(--primary-dark-rgb));
    --background-color: rgb(var(--background-rgb));
    --standout-color: rgb(var(--standout-rgb));

    --translucence-color: rgba(var(--standout-rgb), 0.4);
    --translucence-alt-color: rgba(var(--standout-rgb), 0.6);
    --primary-translucence-color: rgba(var(--primary-rgb), 0.8);
}

/* Cancel the fancy-type paragraph indent. */
p + p {
    text-indent: 0em;
    margin-top: 0em;
}

html, body {
    height: 100%;
}

a {
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

a:hover, a:focus, .ui-widget-content a, .ui-widget-content a:hover, .ui-widget-content a:focus {
    color: var(--primary-color);
}

a.icboard {
	font-style: italic;
}

body {
    display: flex;
    flex-direction: column;
}

#banner {
    background-color: var(--standout-color);
}

#banner .container {
    width: auto;
    padding: 0;
}

.strapline {
    display: none;
}

img.swordimage {
    width: 15vw;
    padding-left: 5vw;
    padding-top: 2vw;
    position: absolute;
    z-index: 10;
}

img.titleimage {
    vertical-align: top;
    width: 75vw;
    padding-top: 4vw;
    padding-left: 20vw;
}

nav {
	background-color: var(--primary-color);
}

#sessionpanel {
    text-align: center;
    background-color: var(--primary-dark-color);
    color: var(--standout-color);
    z-index: 11;
    padding: 0.5rem;
}

#sessionpanel a, #sessionpanel a:visited {
    color: var(--standout-color);
}

#content-space {
    background-color: var(--background-color);
    color: var(--primary-dark-color);
    z-index: 11;
    padding-top: 2em;
    flex: 1 0 auto;
}

#content-space a, #content-space a:visited {
    color: #ad0606;
}

footer {
    background-color: var(--primary-color);
    color: var(--standout-color);
    padding: 1em;
    flex-shrink: 0;
}

.footerflex {
    display: flex;
    justify-content: space-between;
}

footer p {
    margin-bottom: 0;
}

footer a, footer a:hover, footer a:focus {
    color: #fff;
}

label.shiftedlabel {
    position: relative;
    top: -3px;
}

#hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    position: absolute;
    top: 0;
    left: 0;
    background-color: var(--primary-color);
    color: var(--standout-color);
    width: 8vw;
    height: 8vw;
    font-size: 5vw;
    z-index: 12;
    transition: all 0.5s ease;
}

#hamburger > div:first-child {
    display: block;
}

#hamburger > div:last-child {
    display: none;
}

#hamburger:hover {
    box-shadow: rgba(0, 0, 0, 0.25) 0rem 1.4rem 2.8rem, rgba(0, 0, 0, 0.22) 0rem 1rem 1rem;
    width: 50vw;
    height: 100vh;
    transition: all 0.5s ease;
    justify-content: flex-start;
    overflow-y: scroll;
}

#hamburger > div.icon {
    text-align: center;
}

#hamburger:hover > div:first-child {
    display: none;
}

#hamburger:hover > div:last-child {
    display: block;
}

#faux-menu {
    background-color: var(--primary-color);
    height: 1.5vw;
}

#menu {
    color: var(--standout-color);
    z-index: 12;
    list-style: none;
    padding-top: 1rem;
}

#menu > li {
    font-weight: 600;
}

#menu li {
    font-size: 2rem;
}

#menu ul {
    font-weight: 400;
    list-style: none;
}

#menu ul li div.menuentry {
    padding-left: 0.5em;
}

#menu ul li div.menuentry:hover {
    background-color: var(--translucence-color);
}

@media (min-width: 1000px) {
    #banner .container {
        width: 80%;
        padding: 0 20px;
    }

    #logo {
        padding-bottom: 1em;
    }

    .strapline {
        display: block;
        font-size: 2.45rem;
        padding-left: 15rem;
        margin-top: -3.5rem;
        x-overflow: hidden;
        y-overflow: hidden;
        width: 50rem;
    }

    img.swordimage {
        height: 12.5em;
        width: auto;
        padding-left: 0;
        padding-top: 1em;
        position: absolute;
        z-index: 10;
    }

    img.titleimage {
        vertical-align: top;
        height: 6em;
        width: auto;
        padding-top: 2em;
        padding-left: 10em;
    }

    #hamburger {
        display: block;
        position: static;
        height: 3em;
        width: inherit;
        transition: inherit;
        font-size: inherit;
        overflow-y: visible;
    }

    #hamburger:hover {
        height: 3em;
        width: inherit;
        box-shadow: inherit;
        transition: inherit;
        overflow-y: visible;
    }

    #hamburger > div:first-child,
    #hamburger:hover > div:first-child {
        display: none;
    }

    #hamburger > div:last-child,
    #hamburger:hover > div:last-child {
        display: block;
    }

    #faux-menu {
        display: none;
    }

    #menu {
        position: static;
        margin-left: 13.5rem;
        height: 3em;
        overflow: hidden;
        margin-bottom: 0;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: stretch;
        list-style: none;
        width: inherit;
        padding-top: 0;
    }

    #menu li {
        font-size: 1.8rem;
        font-weight: 400;
    }

    #menu > li {
        transition-duration: 0.5s;
        margin-bottom: 0;
    }

    #menu > li > div.menulabel {
        padding: 0 1.5rem;
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
        height: 100%;
    }

    #menu li:hover, #menu li:focus-within {
        cursor: pointer;
        background-color: var(--translucence-color);
    }

    #menu ul {
        list-style: none;
        padding-top: 0.5em;
        visibility: hidden;
        opacity: 0;
        position: absolute;
        transition: all 0.5s ease;
        margin: 0;
        display: none;
        z-index: 12;
        background-color: var(--primary-color);
        box-shadow: rgba(0, 0, 0, 0.25) 0rem 1.4rem 2.8rem, rgba(0, 0, 0, 0.22) 0rem 1rem 1rem;
        min-width: 20rem;
    }

    #menu ul li {
        padding-left: 1em;
        padding-right: 1em;
        box-sizing: border-box;
    }

    #menu ul ul {
        margin-left: 5rem;
    }

    #menu li:hover > ul, #menu li:focus-within > ul, #menu li ul:hover, #menu ul.force-visible {
        visibility: visible;
        opacity: 1;
        display: block;
    }

    #meny ul.force-visible {
        transition-duration: 0s;
    }

    #menu ul li div.menuentry:hover {
        background: none;
    }

    #menu li ul li {
        clear: both;
        width: 100%;
    }
}

.sidebarcategory a, .sidebarcategory a:hover, .sidebarcategory a:focus {
    color: var(--standout-color);
    text-decoration: none;
}

.admin_notifications {
    background-color: var(--standout-color);
    border: 0.2rem solid var(--primary-dark-color);
    box-shadow: rgba(0, 0, 0, 0.25) 0rem 1.4rem 2.8rem, rgba(0, 0, 0, 0.22) 0rem 0.5rem 0.5rem;
    padding: 1rem 2rem 0 2rem;
    margin-bottom: 2rem;
}

textarea.fullwidtharea, textarea.messagearea {
    width: 100%;
    font-family: monospace;
}

textarea.pagearea { height: 20em; }

textarea.messagearea { height: 10em; }

div.preview, p.errortext {
    width: 700px;
    background-color: var(--translucence-color);
    padding: 5px;
}

div.previewtitle {
    width: 690px;
    background-color: var(--translucence-color);
    padding-left: 10px;
}

div.entries {
    margin-left: 2.5em;
    border-left: solid 4px #aa0000;
    padding-left: 0.5em;
}

div#fader {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: var(--translucence-color);
    z-index: 100;
}

div.dialog_frame {
    position: relative;
    left: -4px;
    top: -4px;
    background-color: #ffffff;
    border: solid 1px #555555;
}

div.dialog_title {
    font-size: 1.2em;
    font-weight: bold;
    width: 100%;
    margin-right: 3em;
    background-color: #aa0000;
    color: #ffffff;
}

div.close_icon {
    position: absolute;
    top: 0px;
    right: 0px;
    padding: 0.3em;
}

div.dialog_contents {
    padding: 1em;
    padding-bottom: 0em;
}

p.form_buttons, p.form_actions, p.actions {
    text-align: right;
}

div.errorExplanation, div.error {
	padding:.8em;margin-bottom:1em;border:2px solid #ddd;
	background:#FBE3E4;color:#8a1f11;border-color:#FBC2C4;
}

div.errorExplanation h2, div.error h2 {
    font-size: 1.2em;
}

div.errorExplanation p, div.errorExplanation ul, div.error p, div.error ul {
    margin-bottom: 0.2em;
}

div.field_with_errors {
    display: inline;
    background-color: #ffbbbb;
}

.request {
    font-style: italic;
	font-weight: bold;
	color: red;
}

.restrict {
	color: #993300;
}

.oldtext {
	text-decoration: line-through;
}

.newtext {
	color: #035604;
}

:disabled { opacity: 0.5; }

