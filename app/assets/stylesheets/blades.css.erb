div.edited_by { float: left; }

.hidden { display: none; }

table.game_applications th, table.game_applications td { vertical-align: top; }

input[type="text"].fullwidth, div#dialog select { width: 100%; }
div#dialog input[type="text"].datepicker { width: 85%; }
