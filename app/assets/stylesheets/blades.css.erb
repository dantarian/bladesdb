table.primary .unselected_actions, table.secondary .unselected_actions { display: none; }
table.source .selected_actions, table.source .primary, table.source .secondary { display: none; }
table.dataTable thead tr { background: var(--primary-color); }
table.dataTable td, table.dataTable thead th { padding: 1em; }

table.userMergeTable th.login, table.userMergeTable td.login { width: 15%; }
